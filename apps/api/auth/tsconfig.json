{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@publishers/*": [
        "./src/events/publishers/*"
      ],
      "@models/*": [
        "./src/models/*"
      ],
      "@routes/*": [
        "./src/routes/*"
      ],
      "@validations/*": [
        "./src/validations/*"
      ],
      "@controllers/*": [
        "./src/controllers/*"
      ],
      "@utility/*": [
        "./src/utility/*"
      ],
      "app": [
        "./src/app.ts"
      ]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
